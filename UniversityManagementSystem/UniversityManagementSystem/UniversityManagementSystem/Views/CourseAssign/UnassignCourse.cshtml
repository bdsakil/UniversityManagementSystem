
@{
    ViewBag.Title = "UnassignCourse";
}
<link href="~/Content/materialize/css/materialize.css" rel="stylesheet" />
<style>
    .SizeA {
        overflow: hidden;
        margin-bottom: 400px;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    
   
    <br />
    <br />
    
        <div class="form-horizontal SizeA">
            
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" class="btn btn-danger" value="Unassign Course" onclick="return confirm('Are you Sure you unassign all Courses?')" />
                </div>

           
            <br />
            <br />
            <div class="col-md-offset-5 col-md-10" style="color:green">
                @ViewBag.Message

            </div>
            <div class="col-md-offset-5 col-md-10" style="color:red">
                @ViewBag.errorMessage

            </div>
        </div>
  
}





